<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="80dp"
    android:onClick="Topic1"
    android:id="@+id/t1"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thin_bg_v4"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/topicBanner"
            android:src="@drawable/swim_logo" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic 1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:id="@+id/titleTopic"
            android:layout_gravity="center_vertical"
            android:padding="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic 1"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:fontFamily="@font/poppins"
            android:textSize="10sp"
            android:id="@+id/numTopic"
            android:layout_gravity="center_vertical"
            android:padding="8dp" />


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/btnWrapper"
        android:layout_gravity="end |center_vertical"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="5dp"
            android:id="@+id/hide"
            android:layout_marginRight="10dp"
            android:background="@color/green"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit"
            android:src="@drawable/ic_edit"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/remove"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go"
            android:src="@drawable/ic_forward_arrow"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>