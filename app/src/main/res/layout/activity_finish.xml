<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Finish">

    <RelativeLayout
        android:id="@+id/header"
        android:padding="10dp"
        android:background="#1178AF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Very Well Done! "/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:gravity="center"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/thumb"
            android:layout_height="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've Got"
            android:textColor="@color/black"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/score"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct"
            android:id="@+id/tv"
            android:textStyle="bold"
            android:textColor="@color/green" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/wscore"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:id="@+id/wtv"
            android:textStyle="bold"
            android:textColor="@color/red" />
 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/mscore"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Missed"
            android:id="@+id/mtv"
            android:textStyle="bold"
            android:textColor="@color/orange" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/custom_poppins"
            android:text="Kindly Take a sceenshot of your score."
            android:id="@+id/ltv"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

    <ImageView
        android:layout_below="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finished"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@null"
        android:textStyle="bold"
        android:onClick="Finish"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_btn_bg"/>

</RelativeLayout>