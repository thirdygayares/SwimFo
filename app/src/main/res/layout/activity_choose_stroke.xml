<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".ChooseStroke">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="60dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"

        app:contentPadding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#007AC1"
            app:cardCornerRadius="20dp"
            app:contentPadding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bubblegumsans"
                    android:text="Select Stroke"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnfreeStyle"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableTint="@color/primary"
                    android:fontFamily="@font/bubblegumsans"
                    android:paddingVertical="10dp"
                    android:stateListAnimator="@null"
                    android:text="Free Style"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:rippleColor="@color/green"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />
                <com.google.android.material.button.MaterialButton
                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableTint="@color/primary"
                    android:fontFamily="@font/bubblegumsans"
                    android:paddingVertical="10dp"
                    android:stateListAnimator="@null"
                    android:text="Back Stroke"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:rippleColor="@color/green"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />
                <com.google.android.material.button.MaterialButton
                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableTint="@color/primary"
                    android:fontFamily="@font/bubblegumsans"
                    android:paddingVertical="10dp"
                    android:stateListAnimator="@null"
                    android:text="Butterfly"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:rippleColor="@color/green"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />
                <com.google.android.material.button.MaterialButton
                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableTint="@color/primary"
                    android:fontFamily="@font/bubblegumsans"
                    android:paddingVertical="10dp"
                    android:stateListAnimator="@null"
                    android:text="Breaststroke"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:rippleColor="@color/green"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>